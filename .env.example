OPENAI_API_KEY=sk-your-key-here
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here
RUNPOD_DATA_CENTER=CA-MTL-1  # Preferred Region
DOCKER_USER=yourusername     # For Image Pushing

# Email Configuration
# Choose ONE email provider: SendGrid (recommended for demos) or Resend
EMAIL_PROVIDER=sendgrid  # Options: sendgrid, resend

# SendGrid Configuration (recommended for fast delivery)
SENDGRID_API_KEY=SG.your-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=UpRez Demo

# Resend Configuration (alternative, slower delivery)
# RESEND_API_KEY=re_your-key-here

# Contact email for demo purposes (where test emails are sent)
CONTACT_EMAIL=your-email@example.com

# Set to true to use OpenAI for marketing copy generation
NEXT_PUBLIC_USE_OPENAI=true

# Point this to your Vercel deployment URL so the AI uses absolute paths
FRONTEND_URL=https://up-rez-demo.vercel.app
NEXT_PUBLIC_FRONTEND_URL=https://up-rez-demo.vercel.app

# Point this to your active ngrok URL
NEXT_PUBLIC_BACKEND_URL=https://your-active-id.ngrok-free.app
